<!--DOCTYPE animations SYSTEM "Levels/level.dtd"-->
<animations>
    <animation name="attack" type="battle">
      <phase parallel="false" duration="300">
	<spriteAnimation name="move_to_attack">
	  <battleSprite who="caster" which="idle"/>
	  <spriteMovement initialFocus="locus" movementDirection="towards" movementStyle="xonly" endFocus="target" endFocusX="towards" movementCompletion="0.2"/>
	</spriteAnimation>
      </phase>
      <phase parallel="false" duration="1000">
	<spriteAnimation name="attack">
	  <battleSprite who="caster" which="attack"/>
	</spriteAnimation>
      </phase>
      <phase parallel="false" duration="300">
	<spriteAnimation name="return_from_attack">
	  <battleSprite who="caster" which="idle"/>
	  <spriteMovement initialFocus="caster" endFocus="locus" movementDirection="towards" movementStyle="xonly" movementCompletion="1.0"/>
	</spriteAnimation>
      </phase>
    </animation>
    <animation name="recoil" type="battle">
      <phase parallel="false" duration="100">
	<spriteAnimation name="recoil">
	  <battleSprite who="target" which="recoil"/>
	  <alterSprite who="target" how="negative"/>
	  <spriteMovement initialFocus="locus" endFocus="caster" movementDirection="away" movementStyle="straight"/>
	</spriteAnimation>
      </phase>
    </animation>
</animations>
