<statusEffectList>
        <statusEffect last="round_count" roundCount="8"  name="Paralyzed">
            <spriteRef ref="StatusEffect/Tangled"/>
            <attributeModifier attribute="can_fight" type="toggle" value="false"/>
            <attributeModifier attribute="draw_paralyzed" type="toggle" value="true"/>
            <attributeModifier attribute="draw_still" type="toggle" value="true"/>
            
        </statusEffect>
        <statusEffect last="permanent"  name="Poison">
            <spriteRef ref="StatusEffect/Poisoned"/>
            <attributeModifier attribute="draw_ill" type="toggle" value="true"/>
            <onRound>
                        <script id="SE_Poison">
                            <![CDATA[
                            const $kLevel = getCharacterLevel($_Character);
                            declare $damage = math::pow($kLevel, 1.07) * 3.0;
                            if($damage <1) $damage = 1;
                            doDamage($_Character,$damage);
                            if(inBattle()){
                                battle::doCharacterAnimation($_Character,getAnimation("recoil"));
                                battle::createDisplay($damage,$_Character,$_DISP_DAMAGE);
                            }else{
                            // TODO: Play sound bzzrp
                            }
                                ]]>
                        </script>
                </onRound>
        </statusEffect>
        <statusEffect last="round_count" roundCount="12" name="Doom">
            <spriteRef ref="StatusEffect/Doomed"/>
                <onRound>
                        <script id="SE_Doom">
                            <![CDATA[
                                if($_EffectRound > 5)
                                {
                                    kill($_Character);
                                }
                                ]]>
                        </script>
                </onRound>
        </statusEffect>
        <statusEffect last="round_count" roundCount="2" name="Tangled">
            <attributeModifier attribute="can_fight" type="toggle" value="false"/>
            <attributeModifier attribute="draw_paralyzed" type="toggle" value="true"/>
            <attributeModifier attribute="draw_still" type="toggle" value="true"/>
            <spriteRef ref="StatusEffect/Tangled"/>
        </statusEffect>
        <statusEffect last="permanent" roundCount="5" name="Stone">
            <attributeModifier attribute="can_act" type="toggle" value="false"/>
            <attributeModifier attribute="draw_stone" type="toggle" value="true"/>
            <attributeModifier attribute="draw_still" type="toggle" value="true"/>
            <spriteRef ref="StatusEffect/Stone"/>
                <onInvoke>
                        <script id="SE_Stone">
                        </script>
                </onInvoke>
        </statusEffect>
        <statusEffect last="round_count" roundCount="4" name="Dragon Rage">
            <spriteRef ref="StatusEffect/DragonRage"/>
            <attributeModifier attribute="str" type="multiply" value="1.25"/>
            <attributeModifier attribute="def" type="multiply" value="0.75"/>	    
            <attributeModifier attribute="draw_berserk" type="toggle" value="true"/>
            <attributeModifier attribute="can_cast" type="toggle" value="false"/>
            <attributeModifier attribute="can_item" type="toggle" value="false"/>
            <!-- TODO: Maybe this one should turn off can_act and onRound do a random attack -->
        </statusEffect>
        <statusEffect last="round_count" roundCount="8" name="Focused">
            <spriteRef ref="StatusEffect/Focused"/>
            <attributeModifier attribute="dex" type="multiply" value="1.25"/>
        </statusEffect>
		<!-- for Defend, a roundCount of 0 may seem weird, but is correct -->
        <statusEffect last="round_count" roundCount="0" name="Defend">
            <spriteRef ref="StatusEffect/Defend"/>
            <attributeModifier attribute="def" type="multiply" value="1.5"/>
			<attributeModifier attribute="res" type="multiply" value="1.5"/>
        </statusEffect>		
        <statusEffect name="Shrunk" roundCount="4" last="round_count">
            <spriteRef ref="StatusEffect/Shrunk"/>
            <attributeModifier attribute="str" type="multiply" value="0.25"/>
            <attributeModifier attribute="draw_mini" type="toggle" value="true"/>
        </statusEffect>
                
</statusEffectList>
